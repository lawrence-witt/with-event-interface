{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.test.ts"]
}
